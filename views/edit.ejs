<% include partials/header %>
<div class="ui main text container segment">
	<h1 class="ui huge header">Edit: <%=blog.title%></h1>
		<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
    	<div class="field">
    	  <label>Title</label>
    	  <input type="text" name="blog[title]" value="<%=blog.title %>">
    	</div>
  		<div class="field">
  		  <label>Text</label>
  		  <textarea name="blog[body]"><%=blog.body %></textarea>
  		</div>
  		<div class="field">
    	  <label>Image-Url</label>
    	  <input type="text" name="blog[img]" value="<%=blog.img %>">
    	</div>
		<div class="ui buttons">
    		<a class="ui button" href="/blogs/<%=blog._id%>">Discard</a>
  			<div class="or"></div>
  			<button class="ui positive button" type="submit">Submit</button>
		</div>
	</form>
</div>
<% include partials/footer %>