<% include partials/header %>
<div class="ui main text container segment">
	<h1 class="ui huge header">New Blog-Post</h1>
	<form action="/blogs" method="POST" class="ui form">
    	<div class="field">
    	  <label>Title</label>
    	  <input type="text" name="blog[title]" placeholder="Title">
    	</div>
  		<div class="field">
  		  <label>Text</label>
  		  <textarea name="blog[body]" placeholder="Content"></textarea>
  		</div>
  		<div class="field">
    	  <label>Image-Url</label>
    	  <input type="text" name="blog[img]" placeholder="Put Image-Url here">
    	</div>
    	<button class="ui button" type="submit">Submit</button>
	</form>
</div>
<% include partials/footer %>